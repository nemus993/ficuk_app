<%= render 'shared/title'%>
<h1><%= @user.first_name%> <%= @user.last_name%></h1>
<%= render 'shared/stats' %>
<%= render 'follow_form' %>
<table>
  <thead>
    <tr>
      <th>Your Tweets</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td><p>Tweeted <%= time_ago_in_words(tweet.created_at) %>ago</p></td>
      </tr>
    <% end %>
  </tbody>
</table>
